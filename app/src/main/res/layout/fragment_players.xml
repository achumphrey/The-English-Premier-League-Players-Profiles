<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.playerdetailsview.PlayersDetailsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.playerdetailsview.PlayersDetailsFragment">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_name_frg_dt"
            android:gravity="left"
            tools:text="@string/name"
            android:textColor="#554BE7"
            android:textSize="@dimen/tv_name_25"
            app:layout_constraintStart_toStartOf="@+id/img_view"
            app:layout_constraintTop_toBottomOf="@+id/img_view" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marg_lay_8"
            android:layout_marginTop="@dimen/mrg_top_32"
            android:layout_marginEnd="@dimen/marg_lay_8"
            android:padding="@dimen/pad_8"
            tools:text="@string/desc"
            android:textSize="@dimen/tv_name_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />


        <ImageView
            android:id="@+id/img_view"
            android:layout_width="344dp"
            android:layout_height="298dp"
            android:layout_marginStart="@dimen/marg_lay_8"
            android:layout_marginTop="@dimen/mrg_top_100"
            android:layout_marginEnd="@dimen/marg_lay_8"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@mipmap/ic_launcher" />

    <ProgressBar
        android:id="@+id/prgBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="@dimen/marg_lay_8"
        android:layout_marginTop="@dimen/mrg_top_15"
        android:layout_marginEnd="@dimen/marg_lay_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mrg_24"
            android:layout_marginTop="@dimen/mrg_top_48"
            android:layout_marginEnd="@dimen/mrg_end_50"
            tools:text="@string/team_name"
            android:textColor="#07750E"
            android:textSize="@dimen/txt_size_25"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintStart_toEndOf="@+id/tv_name"
            tools:layout_constraintTop_toBottomOf="@+id/img_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
